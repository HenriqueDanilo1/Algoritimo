Algoritmo "6-papainoelgordo"
Var
   i, j, c:inteiro
Inicio
   c <- 170
   j <- 110
   repita
      j <- j+3
      c <- c+2
      i <- i+1
   ate (j>c) fimenquanto
   escreva("Em ", i, " anos Juca será mais alto que Chico, tendo respectivamente ", j, " e ", c, " cm. Slk lek é de outro planeta.")
Fimalgoritmo